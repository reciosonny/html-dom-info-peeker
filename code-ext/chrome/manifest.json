{
    "name": "Html Dom Lens",
    "description": "extension for checking DOM element information on the screen",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons":{
        "128": "./images/default.png",
        "19": "./images/default.png"
    },
    "background": {
        "service_worker" : "./background.js"
    },
    "content_scripts": [

    ],
    "action":{
        "default_icons":{
            "128": "./images/default.png"
        } 
    },
    "options_page": "./options.html",
    "permissions":[
        "activeTab",
        "scripting"  
    ],
    "host_permissions":[
        "*://*/*"
    ]
}